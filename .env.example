# Environment Configuration
# Copy this file to .env and update with your values

# Application
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_SECRET=your-secret-key-here-change-this-in-production

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=blogging
DB_USER=your_db_user
DB_PASS=your_db_password

# Security
SESSION_DOMAIN=
SESSION_SECURE=false
SESSION_LIFETIME=3600

# File Uploads
UPLOAD_MAX_SIZE=5242880
UPLOAD_PATH=./uploads

# Email (for future features)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@yourdomain.com

# Logging
LOG_LEVEL=INFO
LOG_PATH=./logs

# Cache
CACHE_ENABLED=false
CACHE_TTL=3600

# Rate Limiting
RATE_LIMIT=60

# Maintenance
MAINTENANCE_MODE=false